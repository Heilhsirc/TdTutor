<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Inicio"] - TdTutor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/sideBarcss.css" />
</head>
<body id="body-pd">
    <div class="wrapper" >
    <!-- Sidebar -->
            <nav id="sidebar">
                <div class="sidebar-header">
            <h3>TdTutor</h3>
        </div>

        <ul class="list-unstyled components">
            <li class="active">
                <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Inicio</a>
                <ul class="collapse list-unstyled" id="homeSubmenu">
                    <li>
                        <a href="/Docentes/Index">Docentes</a>
                    </li>
                    <li>
                        <a href="/Estudiantes/Index">Estudiantes</a>
                    </li>
                </ul>
            </li>
            <li>
                <a href="/ChatWebSocket/Index">Chats</a>
            </li>
            <li>
                <a href="#">Contact</a>
            </li>
        </ul>
    </nav>

    <div id="content">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">

                        <button type="button" id="sidebarCollapse" class="btn btn-info">
                            <i class="fas fa-align-left"></i>
                            <span>Ver/Ocultar</span>
                        </button>

                    </div>
                </nav>
            
            <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
         </main>
     </div>
</div>
</div>



    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - TdTutor - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sideBarJs.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
